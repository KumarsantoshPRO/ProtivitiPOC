<mvc:View
    controllerName="misp.maruti.controller.PartMaster.Upload"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <Page title="Part list View Screen" titleAlignment="Center">
        <f:DynamicPage headerExpanded="{/headerExpanded}" showFooter="true" >
            
            <f:header>
                <f:DynamicPageHeader>
                    <f:content>
                        <fb:FilterBar
                            id="filterbar"
                            persistencyKey="myPersKey"
                            useToolbar="false"
                            search=".onSearch"
                            filterChange=".onFilterChange"
                            afterVariantLoad=".onAfterVariantLoad"
                        >
                            <fb:filterGroupItems>
                                <fb:FilterGroupItem
                                    name="Request_No"
                                    label="Request Number"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                      <Input ></Input>
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="Contact_no"
                                    label="Contact Number"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                       <Input ></Input>
                                    </fb:control>
                                </fb:FilterGroupItem>

                                
                                <fb:FilterGroupItem
                                    name="Plant_"
                                    label="Plant"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                   <Input ></Input>
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="PIC_"
                                    label="PIC"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                     <Input ></Input>
                                    </fb:control>
                                </fb:FilterGroupItem>
                            
                                
                            </fb:filterGroupItems>
                        </fb:FilterBar>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <ScrollContainer
                    width="100%"
                    vertical="true"
                    focusable="true"
                >
                    <Table
                        width="100%"
                        items="{excelData>/}"
                        mode="MultiSelect"
                    >
                        <columns>
                            <Column
                                hAlign="Center"
                                width="10rem"
                            >
                                <Text text="Request ID" />
                            </Column>
                            <Column
                                hAlign="Center"
                                width="10rem"
                            >
                                <Text text="Contact No." />
                            </Column>
                            <Column
                                hAlign="Center"
                                width="10rem"
                            >
                                <Text text="Part Category" />
                            </Column>
                            <Column
                                hAlign="Center"
                                width="10rem"
                            >
                                <Text text="No Of Parts" />
                            </Column>
                            <Column
                                hAlign="Center"
                                width="10rem"
                            >
                                <Text text="Model" />
                            </Column>
                            <Column
                                hAlign="Center"
                                width="10rem"
                            >
                                <Text text="Request Received Date" />
                            </Column>
                            <Column
                                hAlign="Center"
                                width="10rem"
                            >
                                <Text text="Served MIS-P due date" />
                            </Column>
                            <Column
                                hAlign="Center"
                                width="10rem"
                            >
                                <Text text="Delay From due date(no. of days)" />
                            </Column>
                            
                        </columns>
                        <items>
                            <ColumnListItem vAlign="Middle">
                                <cells>
                                    <Input value="{excelData>Part Code}" />
                                    <Input value="{excelData>Part Name}" />
                                    <!-- <Input value="{excelData>Part Category}" /> -->
                                    <ComboBox
                                        selectedKey="{excelData>Part Category}"
                                    >
                                        <items>
                                            <core:Item
                                                key="A"
                                                text="Engine Components"
                                            />
                                            <core:Item
                                                key="B"
                                                text="Transmission Components"
                                            />
                                            <core:Item
                                                key="C"
                                                text="Electrical Components"
                                            />
                                        </items>
                                    </ComboBox>
                                    <!-- <Input value="{excelData>Part Family}" /> -->
                                    <ComboBox
                                        selectedKey="{excelData>Part Family}"
                                    >
                                        <items>
                                            <core:Item
                                                key="A"
                                                text="Engine Components"
                                            />
                                            <core:Item
                                                key="B"
                                                text="Transmission Components"
                                            />
                                            <core:Item
                                                key="C"
                                                text="Electrical Components"
                                            />
                                        </items>
                                    </ComboBox>
                                    <Input value="{excelData>Model}" />
                                    <Input value="{excelData>Engine}" />
                                    <Input value="{excelData>Vendor Code}" />
                                    <Input value="{excelData>Department}" />
                                    <Input value="{excelData>User Id}" />
                                    <Input value="{excelData>User Name}" />
                                    <Input
                                        value="{excelData>Other applicable Model}"
                                    />
                                    <Button
                                        icon="sap-icon://edit"
                                        tooltip="Edit"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </ScrollContainer>
            </f:content>
            	<!-- DynamicPage Footer -->
			<f:footer>
				<OverflowToolbar>
					<Button icon="sap-icon://message-popup"
							text="{/messagesLength}"
							type="Emphasized"
							press="onMessageButtonPress"
							visible="{= !!${/messagesLength}}"/>
					<ToolbarSpacer/>
					<Button type="Default" text="Inquiry"/>
					<Button type="Default" text="Download"/>
                    <Button type="Default" text="View Part List" press="onViewPartList"/>
                    <Button type="Default" text="Upload parameters" press="uploadParameter"/>
				</OverflowToolbar>
			</f:footer>
        </f:DynamicPage>
    </Page>
</mvc:View>
