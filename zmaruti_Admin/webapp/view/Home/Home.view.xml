<mvc:View
    controllerName="com.zmaruti.controller.Home.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:card="sap.f.cards"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:w="sap.ui.integration.widgets"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:layout="sap.ui.layout"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:tnt="sap.tnt"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:html="http://www.w3.org/1999/xhtml"
>
    <Page
        id="page"
        title="Dashboard"
        titleAlignment="Center"
    >
        <content>
            <grid:CSSGrid
                id="grid1"
                gridTemplateColumns="1fr 1fr 1fr"
                gridTemplateRows="300px 300px 0px"
                gridGap=".4rem"
            >
                <VBox alignItems="Baseline">
                <HBox alignContent="Center" justifyContent="Center" alignItems="Center">
                    <Label text="Change Chart Type:" design="Bold"/>
                    <ComboBox
                        placeholder="Select Chart Type"
                        showButton="true"
                        change="setChartType"
                        selectedKey="{selectionModel>/selectedKey}"
                        width="400px"
                    >
                        <items>
                            <core:Item
                                key="0"
                                text="Donut"
                            />
                            <core:Item
                                key="1"
                                text="Bar"
                            />
                        </items>
                    </ComboBox>
                    </HBox>
                    <!-- <RadioButtonGroup
                        id="rbg3"
                        columns="5"
                        valueState="None"
                        selectedIndex="0"
                        class="sapUiNoMarginBottom"
                        select="setChartType"
                    >
                        <RadioButton
                            id="Donut"
                            text="Donut"
                        />
                        <RadioButton
                            id="Bar"
                            text="Bar"
                        />
                    </RadioButtonGroup> -->
                    <layoutData>
                        <grid:GridItemLayoutData gridRow="1 / 4" />
                    </layoutData>
                    <w:Card
                        manifest="{LocationDetailsModel>/donut}"
                        visible="{selectionModel>/donutvisible}"
                        action="onLocationDonutPress"
                        width="600px"
                        height="600px"
                    >
                        <w:layoutData>
                            <!-- <f:GridContainerItemLayoutData rows="5" columns="5" /> -->
                        </w:layoutData>
                    </w:Card>
                    <w:Card
                        manifest="{LocationDetailsBar>/stackedColumn}"
                        visible="{selectionModel>/barvisible}"
                        action="onLocationDonutPress"
                        width="750px"
                        height="600px"
                    >
                        <w:layoutData>
                            <!-- <f:GridContainerItemLayoutData rows="5" columns="5" /> -->
                        </w:layoutData>
                    </w:Card>
                </VBox>

                <VBox>
                    <layoutData>
                        <grid:GridItemLayoutData gridRow="2 / 4" />
                    </layoutData>
                    <w:Card
                        manifest="{listData>/ListNumericHeader}"
                        height="340px"
                    >
                        <w:layoutData>
                            <!-- <f:GridContainerItemLayoutData rows="4" columns="3" /> -->
                        </w:layoutData>
                    </w:Card>
                </VBox>

                <VBox>
                    <layoutData>
                        <grid:GridItemLayoutData gridRow = "2 / 4" />
                    </layoutData>
                    <w:Card
                        manifest="{listData2>/ListNumericHeader}"
                        height="340px"
                        id="card1"
                    >
                        <w:layoutData>
                            <!-- <f:GridContainerItemLayoutData rows="4" columns="3" /> -->
                        </w:layoutData>
                    </w:Card>
                </VBox>

                <VBox>
                    <layoutData>
                        <grid:GridItemLayoutData gridColumn="2 / 4" />
                    </layoutData>

                    <f:Card
                        height="300px"
                     >
                        

                        <f:content>
                            <viz:VizFrame
                                id="idVizFrame5"
                                height="100%"
                                width="100%"
                                vizType='stacked_column'
                                vizProperties="{plotArea: { drawingEffect: 'glossy', colorPalette: ['#d43015', '#11d215']}, 
                                        title:{ text:''},dataLabel:{visible:true,showTotal:true}}"
                            >
                                <viz:dataset>
                                    <viz.data:FlattenedDataset
                                        data="{BenchStrengthChart>/}"
                                    >
                                        <viz.data:dimensions>
                                            <viz.data:DimensionDefinition
                                                name="Year"
                                                value="{BenchStrengthChart>Year}"
                                                dataType="string"
                                            />
                                        </viz.data:dimensions>

                                        <viz.data:measures>
                                            <viz.data:MeasureDefinition
                                                name="Rejected"
                                                value="{BenchStrengthChart>Rejected}"
                                            />
                                            <viz.data:MeasureDefinition
                                                name="Approved"
                                                value="{BenchStrengthChart>Approved}"
                                            />
                                        </viz.data:measures>
                                    </viz.data:FlattenedDataset>
                                </viz:dataset>

                                <viz:feeds>
                                    <viz.feeds:FeedItem
                                        uid="valueAxis"
                                        type="Measure"
                                        values="Rejected"
                                    />
                                    <viz.feeds:FeedItem
                                        uid="valueAxis"
                                        type="Measure"
                                        values="Approved"
                                    />
                                    <viz.feeds:FeedItem
                                        uid="categoryAxis"
                                        type="Dimension"
                                        values="Year"
                                    />
                                </viz:feeds>
                            </viz:VizFrame>
                        </f:content>
                    </f:Card>
                </VBox>
            </grid:CSSGrid>
        </content>
    </Page>
</mvc:View>
